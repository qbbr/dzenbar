#!/usr/bin/env bash

declare -A filesystem_disk_list
filesystem_disk_list=(['root:']='/sda2' ['strg1:']='/sdb5' ['dwnlds:']='/sdb4') # grep of `df`
maildir="$HOME/Mail/GMail/INBOX/new/"
interface='enp4s0'
declare -A sensors
sensors=(['CPU:']=52 ['GPU:']=4) # line of `sensors`
mixer='Master'

pipe='/tmp/dzenpipe'

icon_path='xbm'
icon_color='#268BD2'
icon_network_down_color='#859900'
icon_network_up_color='#CB4B16'

blue_color='#268BD2'
white_color='#FFFFFF'
bg_color='#073642'
fg_color='#657B83'

normal_color='^fg()'
gray_color='^fg(#839496)'
clear_color='^fg()'

dzen_x=0
dzen_y=1060
dzen_height=20
dzen_width=1920
dzen_font='-*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*'

# functions
icon() {
    echo -n "^fg($white_color)^i($icon_path/$1.xbm)^fg()"
}

text() {
    echo -n "${gray_color}${1}${clear_color}"
}

arrow="^fn(powerlinesymbols-14)î‚°^fn()"

decor_arrow() {
    echo -n "^bg($blue_color)^fg($bg_color)$arrow^bg($blue_color)^fg($white_color) $1 ^bg($bg_color)^fg($blue_color)$arrow^bg()^fg()"
}
